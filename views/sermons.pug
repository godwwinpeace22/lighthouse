extends layout
block content
    link(rel="stylesheet", href="/stylesheets/sermons.css")
    .main(style='padding:0px;')
        .header-nav-bgrd.col-sm-12
            h3.text-center
        .sermon-body.col-sm-12
            .col-sm-10.col-sm-offset-1
                .col-sm-12.filter
                    select#byPastor(name="byPastor")
                        option filter by pastor
                        option John Doe
                        option Jane Doe
                    select#byCat(name="byCat")
                        option filter by category
                        option Grace
                        option Divine Favor
                        option Righteousness
                        option Obedience
                        option Authority
                    select#bySeries(name='bySeries')
                        option filter by series
                .sermon-blocks.col-sm-12
                    if(!sermons)
                        p.bg-warning No sermons yet for this category
                    if(sermons)
                        each sermon in sermons
                            .card: .col-sm-4
                                .panel.panel-default
                                    .panel-heading(style='background-image:url(' + sermon.imgSrc +')')
                                    .panel-body
                                        h3: a(href='/sermons/'+ sermon.link) #{sermon.title}
                                        p By: #{sermon.by}
                                        p Date: #{sermon.date}
                                        p Text: #{sermon.bibleTxt}
                                        p Service: #{sermon.service}
        script(src='/javascripts/jquery-3.2.0.js')
